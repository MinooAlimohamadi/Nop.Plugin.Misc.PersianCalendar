@model DateTime
@{
    NopHtml.AddCssFileParts(DefaultPlugin.ViewsCss);
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"{DefaultPlugin.ViewsJs}persian-date.min.js");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"{DefaultPlugin.ViewsJs}persian-datepicker.min.js");
}
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToString())" />
<script>
    $(document).ready(function() {
        $("#@Html.IdForModel()").persianDatepicker({
            initialValue: false,
            initialValueType: 'persian',
            observer: true,
            format: 'YYYY/MM/DD HH:mm:ss',
            timePicker: {
                enabled: true,
                meridiem: {
                    enabled: true
                }
            }
        });
    });
</script>